<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#FFF8E1"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Create Invoice"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#3E2723"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <!-- Input Fields -->
        <EditText
            android:id="@+id/customerName"
            android:hint="Customer Name"
            android:backgroundTint="#D4AF37"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/customerMobile"
            android:hint="Mobile Number"
            android:inputType="phone"
            android:backgroundTint="#D4AF37"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/itemName"
            android:hint="Item Name"
            android:backgroundTint="#D4AF37"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/weight"
            android:hint="Weight (g)"
            android:inputType="numberDecimal"
            android:backgroundTint="#D4AF37"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/rate"
            android:hint="Rate per gram"
            android:inputType="numberDecimal"
            android:backgroundTint="#D4AF37"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/makingCharges"
            android:hint="Making Charges"
            android:inputType="numberDecimal"
            android:backgroundTint="#D4AF37"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/gstPercent"
            android:hint="GST %"
            android:inputType="numberDecimal"
            android:backgroundTint="#D4AF37"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/discount"
            android:hint="Discount"
            android:inputType="numberDecimal"
            android:backgroundTint="#D4AF37"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Buttons -->
        <Button
            android:id="@+id/addItem"
            android:text="Add Item"
            android:textColor="#FFFFFF"
            android:backgroundTint="#4CAF50"
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/billText"
            android:text="Bill Details:"
            android:textColor="#333333"
            android:textSize="16sp"
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/printBill"
            android:text="Print Bill"
            android:textColor="#FFFFFF"
            android:backgroundTint="#8E24AA"
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>
</ScrollView>
